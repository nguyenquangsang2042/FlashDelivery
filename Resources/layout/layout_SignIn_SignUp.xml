<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorlogo2"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/viewSignin"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/linearBtn"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_margin="30dp"
                android:paddingBottom="30dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="30dp"
                android:background="@drawable/border_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/colorlogo1"
                        android:id="@+id/tvNameApp"
                        android:textStyle="bold"
                        android:text="FLASH APP"
                        android:textSize="20dp"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <EditText
                    android:textColor="@android:color/black"
                    android:id="@+id/edtUser"
                    android:textAlignment="center"
                    android:hint="UserName"
                    android:fontFamily="sans-serif-condensed"
                    android:textColorHint="@android:color/black"
                    android:padding="10dp"
                    android:background="@drawable/custom_editext"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>
                <EditText
                    android:id="@+id/edtPass"
                    android:textAlignment="center"
                    android:hint="Password"
                    android:textColor="@android:color/black"
                    android:fontFamily="sans-serif-condensed"
                    android:textColorHint="@android:color/black"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:background="@drawable/custom_editext"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/btnRegister"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Register"
                            android:textColor="@android:color/white"
                            android:background="@drawable/border_button"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"/>
                        <Button
                            android:id="@+id/btnLogin"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Login"
                            android:textColor="@android:color/white"
                            android:background="@drawable/border_button"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"/>
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/colorlogo1"
                        android:id="@+id/tvForgotPassword"
                        android:layout_marginTop="5dp"
                        android:textStyle="italic"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="Forgot password ? Plese click here"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>

    </FrameLayout>
</FrameLayout>